<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.manager.InventoryController"
            stylesheets="@/resources/Stylesheet/CleanModern.css"
            style="-fx-background-color: #f8fafc;">

    <VBox spacing="20.0" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0"
          AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">
        <children>
            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="20.0">
                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <ImageView fitWidth="24" fitHeight="24" preserveRatio="true">
                        <image><Image url="/resources/img/box-solid-full.png"/></image>
                    </ImageView>
                    <Label text="Inventory Management" style="-fx-text-fill: #1e293b; -fx-font-weight: 700;">
                        <font>
                            <Font name="Segoe UI Bold" size="24.0" />
                        </font>
                    </Label>
                </HBox>
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="btnRefresh" onAction="#handleRefresh" styleClass="button-primary"
                        style="-fx-font-size: 13px; -fx-pref-height: 36px; -fx-pref-width: 110px;">
                    <graphic>
                        <HBox spacing="6" alignment="CENTER">
                            <ImageView fitWidth="14" fitHeight="14" preserveRatio="true">
                                <image><Image url="/resources/img/rotate-right-solid-full.png"/></image>
                            </ImageView>
                            <Label text="Refresh" style="-fx-font-weight: 600;"/>
                        </HBox>
                    </graphic>
                </Button>
            </HBox>

            <!-- Search and Filter Bar -->
            <HBox spacing="12.0" alignment="CENTER_LEFT" styleClass="card" style="-fx-padding: 16;">
                <HBox spacing="8" alignment="CENTER_LEFT" style="-fx-background-color: #f3f4f6; -fx-background-radius: 8; -fx-padding: 8 12;">
                    <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                        <image><Image url="/resources/img/magnifying-glass-solid-full.png"/></image>
                    </ImageView>
                    <TextField fx:id="txtSearch" promptText="Search inventory..."
                               style="-fx-background-color: transparent; -fx-pref-width: 260px;" onKeyReleased="#handleSearch" />
                </HBox>

                <Label text="Stock Status:" style="-fx-text-fill: #475569; -fx-font-weight: 600;">
                    <font><Font name="Segoe UI Semibold" size="13.0" /></font>
                </Label>
                <ComboBox fx:id="cmbFilterStock" onAction="#handleFilter" style="-fx-pref-width: 140px;">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="All"/>
                            <String fx:value="Low Stock"/>
                        </FXCollections>
                    </items>
                </ComboBox>

                <Region HBox.hgrow="ALWAYS" />

                <Button fx:id="btnAddInventory" onAction="#handleAddInventory"
                        styleClass="button-success" style="-fx-font-size: 13px; -fx-pref-height: 36px; -fx-pref-width: 140px;">
                    <graphic>
                        <HBox spacing="6" alignment="CENTER">
                            <ImageView fitWidth="14" fitHeight="14" preserveRatio="true">
                                <image><Image url="/resources/img/plus-solid-full.png"/></image>
                            </ImageView>
                            <Label text="Add New Item" style="-fx-font-weight: 600;"/>
                        </HBox>
                    </graphic>
                </Button>
            </HBox>

            <!-- Statistics -->
            <HBox spacing="16.0">
                <VBox spacing="8" styleClass="card" style="-fx-padding: 16; -fx-pref-width: 220;">
                    <Label text="Total Items" style="-fx-text-fill: #64748b; -fx-font-size: 12px; -fx-font-weight: 600;">
                        <font><Font name="Segoe UI Semibold" size="12.0" /></font>
                    </Label>
                    <Label fx:id="lblTotalItems" text="0 items" style="-fx-text-fill: #1e293b; -fx-font-weight: 700;">
                        <font><Font name="Segoe UI Bold" size="20.0" /></font>
                    </Label>
                </VBox>

                <VBox spacing="8" styleClass="card" style="-fx-padding: 16; -fx-pref-width: 220;">
                    <Label text="Low Stock Alert" style="-fx-text-fill: #64748b; -fx-font-size: 12px; -fx-font-weight: 600;">
                        <font><Font name="Segoe UI Semibold" size="12.0" /></font>
                    </Label>
                    <Label fx:id="lblLowStockItems" text="Low Stock: 0" style="-fx-text-fill: #ef4444; -fx-font-weight: 700;">
                        <font><Font name="Segoe UI Bold" size="20.0" /></font>
                    </Label>
                </VBox>
            </HBox>

            <!-- Inventory Table -->
            <VBox VBox.vgrow="ALWAYS" styleClass="card">
                <TableView fx:id="tableInventory" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="60.0" style="-fx-alignment: CENTER;" />
                        <TableColumn fx:id="colName" text="Item Name" prefWidth="200.0" />
                        <TableColumn fx:id="colQuantity" text="Quantity" prefWidth="100.0" style="-fx-alignment: CENTER;" />
                        <TableColumn fx:id="colUnit" text="Unit" prefWidth="100.0" style="-fx-alignment: CENTER;" />
                        <TableColumn fx:id="colMinStock" text="Min Stock" prefWidth="100.0" style="-fx-alignment: CENTER;" />
                        <TableColumn fx:id="colStatus" text="Status" prefWidth="120.0" style="-fx-alignment: CENTER;" />
                        <TableColumn fx:id="colActions" text="Actions" prefWidth="280.0" style="-fx-alignment: CENTER;" />
                    </columns>
                </TableView>
            </VBox>
        </children>
    </VBox>

    <!-- Overlay for Dialogs -->
    <Pane fx:id="overlay" visible="false" managed="false"
          style="-fx-background-color: rgba(0,0,0,0.5);"
          AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0"/>

    <!-- Add/Edit Dialog -->
    <VBox fx:id="dialogPane" visible="false" managed="false" spacing="20.0" styleClass="card"
          style="-fx-padding: 24; -fx-max-width: 500; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 20, 0, 0, 8);"
          AnchorPane.topAnchor="60.0" AnchorPane.leftAnchor="150.0" AnchorPane.rightAnchor="150.0">

        <HBox alignment="CENTER_LEFT" spacing="12.0">
            <Label fx:id="dialogTitle" text="Add New Item" style="-fx-text-fill: #1e293b; -fx-font-weight: 700;">
                <font>
                    <Font name="Segoe UI Bold" size="18.0" />
                </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#handleCloseDialog"
                    style="-fx-background-color: transparent; -fx-text-fill: #64748b; -fx-font-size: 20px; -fx-cursor: hand; -fx-border-color: transparent;">
                <graphic>
                    <ImageView fitWidth="20" fitHeight="20" preserveRatio="true">
                        <image><Image url="/resources/img/xmark-solid-full.png"/></image>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>

        <Separator />

        <GridPane hgap="16.0" vgap="16.0">
            <columnConstraints>
                <ColumnConstraints minWidth="120.0" />
                <ColumnConstraints minWidth="280.0" hgrow="ALWAYS" />
            </columnConstraints>

            <Label text="Item Name:" GridPane.rowIndex="0" style="-fx-text-fill: #475569; -fx-font-weight: 600;">
                <font><Font name="Segoe UI Semibold" size="13.0" /></font>
            </Label>
            <TextField fx:id="txtName" promptText="Enter item name" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Quantity:" GridPane.rowIndex="1" style="-fx-text-fill: #475569; -fx-font-weight: 600;">
                <font><Font name="Segoe UI Semibold" size="13.0" /></font>
            </Label>
            <TextField fx:id="txtQuantity" promptText="0.00" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Unit:" GridPane.rowIndex="2" style="-fx-text-fill: #475569; -fx-font-weight: 600;">
                <font><Font name="Segoe UI Semibold" size="13.0" /></font>
            </Label>
            <TextField fx:id="txtUnit" promptText="e.g., kg, liters, pieces" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Min Stock:" GridPane.rowIndex="3" style="-fx-text-fill: #475569; -fx-font-weight: 600;">
                <font><Font name="Segoe UI Semibold" size="13.0" /></font>
            </Label>
            <TextField fx:id="txtMinStock" promptText="0.00" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label text="Cost per Unit:" GridPane.rowIndex="4" style="-fx-text-fill: #475569; -fx-font-weight: 600;">
                <font><Font name="Segoe UI Semibold" size="13.0" /></font>
            </Label>
            <TextField fx:id="txtCostPerUnit" promptText="0.00" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        </GridPane>

        <Separator />

        <HBox spacing="12.0" alignment="CENTER_RIGHT">
            <Button text="Cancel" onAction="#handleCloseDialog"
                    style="-fx-background-color: #ffffff; -fx-border-color: #cbd5e0; -fx-text-fill: #475569; -fx-pref-height: 36px; -fx-pref-width: 100px; -fx-font-weight: 600;" />
            <Button fx:id="btnSave" text="Save" onAction="#handleSaveInventory" styleClass="button-success"
                    style="-fx-pref-height: 36px; -fx-pref-width: 100px;" />
        </HBox>
    </VBox>

    <!-- Add Stock Dialog -->
    <VBox fx:id="addStockPane" visible="false" managed="false" spacing="20.0" styleClass="card"
          style="-fx-padding: 24; -fx-max-width: 480; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 20, 0, 0, 8);"
          AnchorPane.topAnchor="80.0" AnchorPane.leftAnchor="180.0" AnchorPane.rightAnchor="180.0">

        <HBox alignment="CENTER_LEFT" spacing="12.0">
            <Label text="Add Stock" style="-fx-text-fill: #1e293b; -fx-font-weight: 700;">
                <font>
                    <Font name="Segoe UI Bold" size="18.0" />
                </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#handleCloseAddStockDialog"
                    style="-fx-background-color: transparent; -fx-text-fill: #64748b; -fx-font-size: 20px; -fx-cursor: hand; -fx-border-color: transparent;">
                <graphic>
                    <ImageView fitWidth="20" fitHeight="20" preserveRatio="true">
                        <image><Image url="/resources/img/xmark-solid-full.png"/></image>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>

        <Separator />

        <GridPane hgap="16.0" vgap="16.0">
            <columnConstraints>
                <ColumnConstraints minWidth="120.0" />
                <ColumnConstraints minWidth="260.0" hgrow="ALWAYS" />
            </columnConstraints>

            <Label text="Item Name:" GridPane.rowIndex="0" style="-fx-text-fill: #475569; -fx-font-weight: 600;">
                <font><Font name="Segoe UI Semibold" size="13.0" /></font>
            </Label>
            <Label fx:id="lblItemName" GridPane.columnIndex="1" GridPane.rowIndex="0"
                   style="-fx-text-fill: #1e293b; -fx-font-weight: 600;">
                <font><Font name="Segoe UI Semibold" size="13.0" /></font>
            </Label>

            <Label text="Add Quantity:" GridPane.rowIndex="1" style="-fx-text-fill: #475569; -fx-font-weight: 600;">
                <font><Font name="Segoe UI Semibold" size="13.0" /></font>
            </Label>
            <TextField fx:id="txtAddQuantity" promptText="0.00" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Cost per Unit:" GridPane.rowIndex="2" style="-fx-text-fill: #475569; -fx-font-weight: 600;">
                <font><Font name="Segoe UI Semibold" size="13.0" /></font>
            </Label>
            <TextField fx:id="txtAddCostPerUnit" promptText="0.00" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        </GridPane>

        <Separator />

        <HBox spacing="12.0" alignment="CENTER_RIGHT">
            <Button text="Cancel" onAction="#handleCloseAddStockDialog"
                    style="-fx-background-color: #ffffff; -fx-border-color: #cbd5e0; -fx-text-fill: #475569; -fx-pref-height: 36px; -fx-pref-width: 100px; -fx-font-weight: 600;" />
            <Button fx:id="btnAddStock" text="Add Stock" onAction="#handleAddStock" styleClass="button-success"
                    style="-fx-pref-height: 36px; -fx-pref-width: 120px;" />
        </HBox>
    </VBox>

</AnchorPane>