<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.manager.EmployeeController"
            stylesheets="@/resources/Stylesheet/CleanModern.css"
            style="-fx-background-color: #f8fafc;">

    <VBox spacing="20.0" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0"
          AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>

        <!-- Header -->
        <HBox alignment="CENTER_LEFT" spacing="20.0">
            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <ImageView fitWidth="28" fitHeight="28" preserveRatio="true">
                    <image><Image url="/resources/img/user-group-solid-full.png"/></image>
                </ImageView>
                <Label text="Employee Management" style="-fx-text-fill: #1e293b; -fx-font-weight: 700;">
                    <font>
                        <Font name="Segoe UI Bold" size="28.0" />
                    </font>
                </Label>
            </HBox>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnRefresh" onAction="#handleRefresh"
                    style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 8; -fx-pref-height: 40px; -fx-pref-width: 120px; -fx-font-size: 14px; -fx-font-weight: 600; -fx-font-family: 'Segoe UI Semibold';">
                <graphic>
                    <HBox spacing="8" alignment="CENTER">
                        <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                            <image><Image url="/resources/img/rotate-right-solid-full.png"/></image>
                        </ImageView>
                        <Label text="Refresh" textFill="white" style="-fx-font-weight: 600;"/>
                    </HBox>
                </graphic>
            </Button>
        </HBox>

        <!-- Search and Filter Bar -->
        <HBox spacing="12.0" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-padding: 18.0; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 12, 0, 0, 3);">
            <HBox spacing="8" alignment="CENTER_LEFT" style="-fx-background-color: #f3f4f6; -fx-background-radius: 8; -fx-padding: 8 12; -fx-border-color: #cbd5e0; -fx-border-radius: 8; -fx-border-width: 1.5;">
                <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                    <image><Image url="/resources/img/magnifying-glass-solid-full.png"/></image>
                </ImageView>
                <TextField fx:id="txtSearch" promptText="Search employees..."
                           style="-fx-background-color: transparent; -fx-pref-width: 300px; -fx-font-size: 14px; -fx-font-family: 'Segoe UI';"
                           onKeyReleased="#handleSearch" />
            </HBox>
            <Label text="Role:" style="-fx-font-size: 14px; -fx-text-fill: #475569; -fx-font-weight: 600; -fx-font-family: 'Segoe UI Semibold';" />
            <ComboBox fx:id="cmbFilterRole" onAction="#handleFilter"
                      style="-fx-pref-width: 140px; -fx-font-size: 14px; -fx-pref-height: 38px; -fx-font-family: 'Segoe UI';">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="All"/>
                        <String fx:value="Manager"/>
                        <String fx:value="Staff"/>
                    </FXCollections>
                </items>
            </ComboBox>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnAddEmployee" onAction="#handleAddEmployee"
                    style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 8; -fx-pref-height: 42px; -fx-pref-width: 160px; -fx-font-size: 14px; -fx-font-weight: 600; -fx-font-family: 'Segoe UI Semibold';">
                <graphic>
                    <HBox spacing="8" alignment="CENTER">
                        <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                            <image><Image url="/resources/img/plus-solid-full.png"/></image>
                        </ImageView>
                        <Label text="Add Employee" textFill="white" style="-fx-font-weight: 600;"/>
                    </HBox>
                </graphic>
            </Button>
        </HBox>

        <!-- Employee Table -->
        <VBox VBox.vgrow="ALWAYS" styleClass="card" style="-fx-padding: 20;">
            <TableView fx:id="tableEmployees" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="60.0" style="-fx-alignment: CENTER;" />
                    <TableColumn fx:id="colUsername" text="Username" prefWidth="180.0" />
                    <TableColumn fx:id="colRole" text="Role" prefWidth="120.0" style="-fx-alignment: CENTER;" />
                    <TableColumn fx:id="colStatus" text="Status" prefWidth="100.0" style="-fx-alignment: CENTER;" />
                    <TableColumn fx:id="colShiftStatus" text="Shift Status" prefWidth="140.0" style="-fx-alignment: CENTER;" />
                    <TableColumn fx:id="colActions" text="Actions" prefWidth="280.0" style="-fx-alignment: CENTER;" />
                </columns>
            </TableView>
            <HBox spacing="20.0" alignment="CENTER_LEFT" style="-fx-padding: 15.0 0 0 0;">
                <Label fx:id="lblTotalEmployees" text="Total: 0 employees" style="-fx-font-size: 14px; -fx-font-weight: 600; -fx-text-fill: #1e293b; -fx-font-family: 'Segoe UI Semibold';" />
            </HBox>
        </VBox>

    </VBox>

    <!-- Overlay for Dialogs -->
    <Pane fx:id="overlay" visible="false" managed="false"
          style="-fx-background-color: rgba(0,0,0,0.5);"
          AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0"/>

    <!-- Add/Edit Employee Dialog -->
    <VBox fx:id="dialogPane" visible="false" managed="false" spacing="18.0"
          style="-fx-background-color: white; -fx-padding: 28.0; -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 24, 0, 0, 8);"
          AnchorPane.topAnchor="60.0" AnchorPane.leftAnchor="180.0" AnchorPane.rightAnchor="180.0">

        <HBox alignment="CENTER_LEFT" spacing="12.0">
            <Label fx:id="dialogTitle" text="Add New Employee" style="-fx-font-weight: 700; -fx-text-fill: #1e293b; -fx-font-family: 'Segoe UI Bold';">
                <font>
                    <Font size="22.0" />
                </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#handleCloseDialog"
                    style="-fx-background-color: transparent; -fx-font-size: 20px; -fx-cursor: hand; -fx-text-fill: #64748b; -fx-border-color: transparent; -fx-font-family: 'Segoe UI';">
                <graphic>
                    <ImageView fitWidth="20" fitHeight="20" preserveRatio="true">
                        <image><Image url="/resources/img/xmark-solid-full.png"/></image>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>

        <Separator style="-fx-background-color: #e2e8f0;" />

        <GridPane hgap="16.0" vgap="16.0">
            <columnConstraints>
                <ColumnConstraints minWidth="120.0" />
                <ColumnConstraints minWidth="340.0" hgrow="ALWAYS" />
            </columnConstraints>

            <Label text="Username:" GridPane.rowIndex="0" style="-fx-font-weight: 600; -fx-text-fill: #475569; -fx-font-size: 15px; -fx-font-family: 'Segoe UI Semibold';" />
            <TextField fx:id="txtUsername" promptText="Enter username" GridPane.columnIndex="1" GridPane.rowIndex="0"
                       style="-fx-font-size: 14px; -fx-padding: 10 12; -fx-background-radius: 8; -fx-font-family: 'Segoe UI';" />

            <Label text="Role:" GridPane.rowIndex="1" style="-fx-font-weight: 600; -fx-text-fill: #475569; -fx-font-size: 15px; -fx-font-family: 'Segoe UI Semibold';" />
            <ComboBox fx:id="cmbRole" promptText="Select role" GridPane.columnIndex="1" GridPane.rowIndex="1"
                      style="-fx-font-size: 14px; -fx-pref-height: 40px; -fx-background-radius: 8; -fx-font-family: 'Segoe UI';">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Manager"/>
                        <String fx:value="Staff"/>
                    </FXCollections>
                </items>
            </ComboBox>

            <Label text="Password:" GridPane.rowIndex="2" style="-fx-font-weight: 600; -fx-text-fill: #475569; -fx-font-size: 15px; -fx-font-family: 'Segoe UI Semibold';" />
            <PasswordField fx:id="txtPassword" promptText="Enter password" GridPane.columnIndex="1" GridPane.rowIndex="2"
                           style="-fx-font-size: 14px; -fx-padding: 10 12; -fx-background-radius: 8; -fx-font-family: 'Segoe UI';" />
        </GridPane>

        <Separator style="-fx-background-color: #e2e8f0;" />

        <!-- Shift Management Section -->
        <VBox spacing="12.0">
            <Label text="Shift Management" style="-fx-font-weight: 600; -fx-text-fill: #1e293b; -fx-font-size: 16px; -fx-font-family: 'Segoe UI Semibold';" />
            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Button fx:id="btnStartShift" text="Start Shift" onAction="#handleStartShift"
                        styleClass="button-success"
                        style="-fx-pref-height: 38px; -fx-pref-width: 110px; -fx-font-size: 13px; -fx-font-weight: 600; -fx-font-family: 'Segoe UI Semibold';" />
                <Button fx:id="btnEndShift" text="End Shift" onAction="#handleEndShift"
                        styleClass="button-danger"
                        style="-fx-pref-height: 38px; -fx-pref-width: 110px; -fx-font-size: 13px; -fx-font-weight: 600; -fx-font-family: 'Segoe UI Semibold';" />
                <ComboBox fx:id="cmbShiftStatus" promptText="Select Status"
                          style="-fx-pref-width: 150px; -fx-font-size: 13px; -fx-pref-height: 38px; -fx-background-radius: 8; -fx-font-family: 'Segoe UI';">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="working"/>
                            <String fx:value="off-duty"/>
                            <String fx:value="on-break"/>
                        </FXCollections>
                    </items>
                </ComboBox>
                <Button fx:id="btnUpdateShift" text="Update Status" onAction="#handleUpdateShift"
                        styleClass="button-primary"
                        style="-fx-pref-height: 38px; -fx-pref-width: 130px; -fx-font-size: 13px; -fx-font-weight: 600; -fx-font-family: 'Segoe UI Semibold';" />
            </HBox>
        </VBox>

        <Separator style="-fx-background-color: #e2e8f0;" />

        <HBox spacing="12.0" alignment="CENTER_RIGHT">
            <Button text="Cancel" onAction="#handleCloseDialog"
                    styleClass="button"
                    style="-fx-pref-height: 42px; -fx-pref-width: 120px; -fx-font-size: 14px; -fx-font-weight: 600; -fx-font-family: 'Segoe UI Semibold';" />
            <Button fx:id="btnSave" text="Save" onAction="#handleSaveEmployee"
                    styleClass="button-success"
                    style="-fx-pref-height: 42px; -fx-pref-width: 120px; -fx-font-size: 14px; -fx-font-weight: 600; -fx-font-family: 'Segoe UI Semibold';" />
        </HBox>
    </VBox>

</AnchorPane>