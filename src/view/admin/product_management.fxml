<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Font?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.manager.ProductController"
            style="-fx-background-color: #f8f9fa;">

    <VBox spacing="20.0" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0"
          AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>

        <!-- Header -->
        <HBox alignment="CENTER_LEFT" spacing="20.0">
            <Label text="📦 Product Management" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;">
                <font>
                    <Font size="28.0" />
                </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="lblDate" text="Thursday, 16/10/2025" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" />
            <Button fx:id="btnRefresh" onAction="#handleRefresh" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 8; -fx-pref-height: 40px; -fx-pref-width: 120px;" text="🔄 Refresh" />
        </HBox>

        <!-- Search and Filter Bar -->
        <HBox spacing="15.0" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-padding: 15.0; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);">
            <TextField fx:id="txtSearch" promptText="🔍 Search products..." style="-fx-pref-width: 300px; -fx-font-size: 14px;" onKeyReleased="#handleSearch" />
            <Label text="Type:" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;" />
            <ComboBox fx:id="cmbFilterType" promptText="All" onAction="#handleFilter" style="-fx-pref-width: 150px; -fx-font-size: 14px;">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="All"/>
                        <String fx:value="Hot"/>
                        <String fx:value="Iced"/>
                        <String fx:value="Frappe"/>
                    </FXCollections>
                </items>
            </ComboBox>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnAddProduct" text="➕ Add Product" onAction="#handleAddProduct"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 8; -fx-pref-height: 40px; -fx-pref-width: 150px;" />
        </HBox>

        <!-- Products Table -->
        <VBox VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-padding: 20.0; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 15, 0, 0, 5);">
            <TableView fx:id="tableProducts" VBox.vgrow="ALWAYS" style="-fx-font-size: 13px; -fx-background-radius: 8;">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50.0" style="-fx-alignment: CENTER;" />
                    <TableColumn fx:id="colImage" text="Image" prefWidth="80.0" style="-fx-alignment: CENTER;" />
                    <TableColumn fx:id="colName" text="Product Name" prefWidth="200.0" />
                    <TableColumn fx:id="colPrice" text="Price" prefWidth="100.0" style="-fx-alignment: CENTER;" />
                    <TableColumn fx:id="colDrinkTypes" text="Types" prefWidth="150.0" style="-fx-alignment: CENTER;" />
                    <TableColumn fx:id="colActions" text="Actions" prefWidth="280.0" style="-fx-alignment: CENTER;" />
                </columns>
            </TableView>
            <HBox spacing="20.0" alignment="CENTER_LEFT" style="-fx-padding: 15.0 0 0 0;">
                <Label fx:id="lblTotalProducts" text="Total: 0 products" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            </HBox>
        </VBox>

    </VBox>

    <!-- Overlay for Dialogs -->
    <Pane fx:id="overlay" visible="false" managed="false"
          style="-fx-background-color: rgba(0,0,0,0.5);"
          AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0"/>

    <!-- Add/Edit Product Dialog -->
    <VBox fx:id="dialogPane" visible="false" managed="false" spacing="15.0"
          style="-fx-background-color: white; -fx-padding: 25.0; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 20, 0, 0, 10);"
          AnchorPane.topAnchor="80.0" AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="200.0">

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label fx:id="dialogTitle" text="Add New Product" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;">
                <font>
                    <Font size="20.0" />
                </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button text="✕" onAction="#handleCloseDialog"
                    style="-fx-background-color: transparent; -fx-font-size: 20px; -fx-cursor: hand; -fx-text-fill: #7f8c8d;" />
        </HBox>

        <Separator style="-fx-background-color: #e0e0e0;" />

        <HBox spacing="20.0">
            <!-- Left: Image Preview -->
            <VBox spacing="10.0" alignment="TOP_CENTER" style="-fx-padding: 10.0;">
                <Label text="Product Image" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                <ImageView fx:id="imgPreview" fitWidth="150.0" fitHeight="150.0" preserveRatio="true"
                           style="-fx-border-color: #ddd; -fx-border-width: 2; -fx-background-radius: 10;" />
                <Button fx:id="btnUploadImage" text="📷 Upload Image" onAction="#handleUploadImage"
                        style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 8; -fx-pref-height: 35px; -fx-pref-width: 150px;" />
            </VBox>

            <!-- Right: Product Details -->
            <GridPane hgap="15.0" vgap="15.0" HBox.hgrow="ALWAYS">
                <columnConstraints>
                    <ColumnConstraints minWidth="120.0" />
                    <ColumnConstraints minWidth="300.0" hgrow="ALWAYS" />
                </columnConstraints>

                <Label text="Product Name:" GridPane.rowIndex="0" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                <TextField fx:id="txtProductName" promptText="Enter product name" GridPane.columnIndex="1" GridPane.rowIndex="0"
                           style="-fx-font-size: 14px; -fx-background-radius: 8;" />

                <Label text="Price ($):" GridPane.rowIndex="1" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                <TextField fx:id="txtPrice" promptText="0.00" GridPane.columnIndex="1" GridPane.rowIndex="1"
                           style="-fx-font-size: 14px; -fx-background-radius: 8;" />

                <Label text="Drink Types:" GridPane.rowIndex="2" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                <HBox spacing="15.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <CheckBox fx:id="chkHot" text="Hot" style="-fx-font-size: 14px;" />
                    <CheckBox fx:id="chkIced" text="Iced" style="-fx-font-size: 14px;" />
                    <CheckBox fx:id="chkFrappe" text="Frappe" style="-fx-font-size: 14px;" />
                </HBox>

                <Label text="Note:" GridPane.rowIndex="3" GridPane.columnSpan="2" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" />
                <Label text="Select at least one drink type. You can manage ingredients after creating the product."
                       GridPane.rowIndex="4" GridPane.columnSpan="2" style="-fx-text-fill: #7f8c8d; -fx-font-size: 11px; -fx-wrap-text: true;" />
            </GridPane>
        </HBox>

        <Separator style="-fx-background-color: #e0e0e0;" />

        <HBox spacing="15.0" alignment="CENTER_RIGHT">
            <Button text="Cancel" onAction="#handleCloseDialog"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 8; -fx-pref-height: 40px; -fx-pref-width: 100px;" />
            <Button fx:id="btnSave" text="Save" onAction="#handleSaveProduct"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 8; -fx-pref-height: 40px; -fx-pref-width: 100px;" />
        </HBox>
    </VBox>

    <!-- Ingredients Management Dialog -->
    <VBox fx:id="ingredientsPane" visible="false" managed="false" spacing="15.0"
          style="-fx-background-color: white; -fx-padding: 25.0; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 20, 0, 0, 10);"
          AnchorPane.topAnchor="60.0" AnchorPane.leftAnchor="150.0" AnchorPane.rightAnchor="150.0">

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label text="Manage Product Ingredients" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;">
                <font>
                    <Font size="20.0" />
                </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button text="✕" onAction="#handleCloseIngredientsDialog"
                    style="-fx-background-color: transparent; -fx-font-size: 20px; -fx-cursor: hand; -fx-text-fill: #7f8c8d;" />
        </HBox>

        <Separator style="-fx-background-color: #e0e0e0;" />

        <!-- Add Ingredient Section -->
        <VBox spacing="10.0" style="-fx-background-color: #ecf0f1; -fx-padding: 15.0; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);">
            <Label text="Add Ingredient" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #2c3e50;" />
            <HBox spacing="15.0" alignment="CENTER_LEFT">
                <Label text="Ingredient:" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;" />
                <ComboBox fx:id="cmbInventory" promptText="Select ingredient" prefWidth="200.0" style="-fx-font-size: 14px;" />
                <Label text="Quantity:" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;" />
                <TextField fx:id="txtIngredientQuantity" promptText="0.00" prefWidth="100.0" style="-fx-font-size: 14px; -fx-background-radius: 8;" />
                <Button fx:id="btnAddIngredient" text="➕ Add" onAction="#handleAddIngredient"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 8; -fx-pref-height: 35px; -fx-pref-width: 80px;" />
            </HBox>
        </VBox>

        <!-- Ingredients Table -->
        <VBox VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-padding: 15.0; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 15, 0, 0, 5);">
            <Label text="Current Ingredients" style="-fx-font-weight: bold; -fx-font-size: 18px; -fx-text-fill: #2c3e50; -fx-padding: 0 0 10.0 0;" />
            <TableView fx:id="tableIngredients" VBox.vgrow="ALWAYS" prefHeight="250.0" style="-fx-background-radius: 8;">
                <columns>
                    <TableColumn fx:id="colIngredientName" text="Ingredient Name" prefWidth="250.0" />
                    <TableColumn fx:id="colIngredientQuantity" text="Quantity" prefWidth="120.0" style="-fx-alignment: CENTER;" />
                    <TableColumn fx:id="colIngredientUnit" text="Unit" prefWidth="100.0" style="-fx-alignment: CENTER;" />
                    <TableColumn fx:id="colIngredientActions" text="Actions" prefWidth="100.0" style="-fx-alignment: CENTER;" />
                </columns>
            </TableView>
        </VBox>

        <Separator style="-fx-background-color: #e0e0e0;" />

        <HBox spacing="15.0" alignment="CENTER_RIGHT">
            <Button text="Cancel" onAction="#handleCloseIngredientsDialog"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 8; -fx-pref-height: 40px; -fx-pref-width: 100px;" />
            <Button text="Save Ingredients" onAction="#handleSaveIngredients"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 8; -fx-pref-height: 40px; -fx-pref-width: 150px;" />
        </HBox>
    </VBox>

</AnchorPane>