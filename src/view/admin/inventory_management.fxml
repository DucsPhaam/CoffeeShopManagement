<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.collections.FXCollections?>

<?import java.lang.String?>
<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.manager.InventoryController"
            style="-fx-background-color: #f8f9fa;">

    <VBox spacing="20.0" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0"
          AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>

        <!-- Header -->
        <HBox alignment="CENTER_LEFT" spacing="20.0">
            <Label text="ðŸ›’ Inventory Management" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;">
                <font>
                    <Font size="28.0" />
                </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnRefresh" onAction="#handleRefresh" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 8; -fx-pref-height: 40px; -fx-pref-width: 120px;" text="ðŸ”„ Refresh" />
        </HBox>

        <!-- Search and Filter Bar -->
        <HBox spacing="15.0" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-padding: 15.0; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);">
            <TextField fx:id="txtSearch" promptText="ðŸ” Search inventory..." style="-fx-pref-width: 300px; -fx-font-size: 14px;" onKeyReleased="#handleSearch" />
            <Label text="Filter by Stock:" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;" />
            <ComboBox fx:id="cmbFilterStock" onAction="#handleFilter" style="-fx-pref-width: 150px; -fx-font-size: 14px;">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="All"/>
                        <String fx:value="Low Stock"/>
                    </FXCollections>
                </items>
            </ComboBox>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnAddInventory" text="âž• Add Item" onAction="#handleAddInventory"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 8; -fx-pref-height: 40px; -fx-pref-width: 150px;" />
        </HBox>

        <!-- Inventory Table -->
        <VBox VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-padding: 20.0; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 15, 0, 0, 5);">
            <TableView fx:id="tableInventory" VBox.vgrow="ALWAYS" style="-fx-font-size: 13px; -fx-background-radius: 8;">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50.0" style="-fx-alignment: CENTER;" />
                    <TableColumn fx:id="colName" text="Name" prefWidth="200.0" />
                    <TableColumn fx:id="colQuantity" text="Quantity" prefWidth="100.0" style="-fx-alignment: CENTER;" />
                    <TableColumn fx:id="colUnit" text="Unit" prefWidth="100.0" style="-fx-alignment: CENTER;" />
                    <TableColumn fx:id="colMinStock" text="Min Stock" prefWidth="100.0" style="-fx-alignment: CENTER;" />
                    <TableColumn fx:id="colStatus" text="Status" prefWidth="100.0" style="-fx-alignment: CENTER;" />
                    <TableColumn fx:id="colActions" text="Actions" prefWidth="200.0" style="-fx-alignment: CENTER;" />
                </columns>
            </TableView>
            <HBox spacing="20.0" alignment="CENTER_LEFT" style="-fx-padding: 15.0 0 0 0;">
                <Label fx:id="lblTotalItems" text="Total: 0 items" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                <Label fx:id="lblLowStockItems" text="Low Stock: 0" style="-fx-font-size: 14px; -fx-text-fill: #e74c3c;" />
            </HBox>
        </VBox>

    </VBox>

    <!-- Overlay for Dialogs -->
    <Pane fx:id="overlay" visible="false" managed="false"
          style="-fx-background-color: rgba(0,0,0,0.5);"
          AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0"/>

    <!-- Add/Edit Inventory Dialog -->
    <VBox fx:id="dialogPane" visible="false" managed="false" spacing="15.0"
          style="-fx-background-color: white; -fx-padding: 25.0; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 20, 0, 0, 10);"
          AnchorPane.topAnchor="80.0" AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="200.0">

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label fx:id="dialogTitle" text="Add New Item" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;">
                <font>
                    <Font size="20.0" />
                </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button text="âœ•" onAction="#handleCloseDialog"
                    style="-fx-background-color: transparent; -fx-font-size: 20px; -fx-cursor: hand; -fx-text-fill: #7f8c8d;" />
        </HBox>

        <Separator style="-fx-background-color: #e0e0e0;" />

        <GridPane hgap="15.0" vgap="15.0">
            <columnConstraints>
                <ColumnConstraints minWidth="120.0" />
                <ColumnConstraints minWidth="300.0" hgrow="ALWAYS" />
            </columnConstraints>

            <Label text="Name:" GridPane.rowIndex="0" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            <TextField fx:id="txtName" promptText="Enter item name" GridPane.columnIndex="1" GridPane.rowIndex="0"
                       style="-fx-font-size: 14px; -fx-background-radius: 8;" />

            <Label text="Quantity:" GridPane.rowIndex="1" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            <TextField fx:id="txtQuantity" promptText="0.00" GridPane.columnIndex="1" GridPane.rowIndex="1"
                       style="-fx-font-size: 14px; -fx-background-radius: 8;" />

            <Label text="Unit:" GridPane.rowIndex="2" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            <TextField fx:id="txtUnit" promptText="e.g., g, ml, kg" GridPane.columnIndex="1" GridPane.rowIndex="2"
                       style="-fx-font-size: 14px; -fx-background-radius: 8;" />

            <Label text="Min Stock:" GridPane.rowIndex="3" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            <TextField fx:id="txtMinStock" promptText="0.00" GridPane.columnIndex="1" GridPane.rowIndex="3"
                       style="-fx-font-size: 14px; -fx-background-radius: 8;" />

            <Label text="Cost per Unit ($):" GridPane.rowIndex="4" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            <TextField fx:id="txtCostPerUnit" promptText="0.00" GridPane.columnIndex="1" GridPane.rowIndex="4"
                       style="-fx-font-size: 14px; -fx-background-radius: 8;" />
        </GridPane>

        <Separator style="-fx-background-color: #e0e0e0;" />

        <HBox spacing="15.0" alignment="CENTER_RIGHT">
            <Button text="Cancel" onAction="#handleCloseDialog"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 8; -fx-pref-height: 40px; -fx-pref-width: 100px;" />
            <Button fx:id="btnSave" text="Save" onAction="#handleSaveInventory"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 8; -fx-pref-height: 40px; -fx-pref-width: 100px;" />
        </HBox>
    </VBox>

    <!-- Add Stock Dialog -->
    <VBox fx:id="addStockPane" visible="false" managed="false" spacing="15.0"
          style="-fx-background-color: white; -fx-padding: 25.0; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 20, 0, 0, 10);"
          AnchorPane.topAnchor="80.0" AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="200.0">

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label text="Add Stock" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;">
                <font>
                    <Font size="20.0" />
                </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button text="âœ•" onAction="#handleCloseAddStockDialog"
                    style="-fx-background-color: transparent; -fx-font-size: 20px; -fx-cursor: hand; -fx-text-fill: #7f8c8d;" />
        </HBox>

        <Separator style="-fx-background-color: #e0e0e0;" />

        <GridPane hgap="15.0" vgap="15.0">
            <columnConstraints>
                <ColumnConstraints minWidth="120.0" />
                <ColumnConstraints minWidth="300.0" hgrow="ALWAYS" />
            </columnConstraints>

            <Label text="Item Name:" GridPane.rowIndex="0" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            <Label fx:id="lblItemName" GridPane.columnIndex="1" GridPane.rowIndex="0"
                   style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;" />

            <Label text="Add Quantity:" GridPane.rowIndex="1" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            <TextField fx:id="txtAddQuantity" promptText="0.00" GridPane.columnIndex="1" GridPane.rowIndex="1"
                       style="-fx-font-size: 14px; -fx-background-radius: 8;" />

            <Label text="Cost per Unit ($):" GridPane.rowIndex="2" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            <TextField fx:id="txtAddCostPerUnit" promptText="0.00" GridPane.columnIndex="1" GridPane.rowIndex="2"
                       style="-fx-font-size: 14px; -fx-background-radius: 8;" />
        </GridPane>

        <Separator style="-fx-background-color: #e0e0e0;" />

        <HBox spacing="15.0" alignment="CENTER_RIGHT">
            <Button text="Cancel" onAction="#handleCloseAddStockDialog"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 8; -fx-pref-height: 40px; -fx-pref-width: 100px;" />
            <Button fx:id="btnAddStock" text="Add Stock" onAction="#handleAddStock"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 8; -fx-pref-height: 40px; -fx-pref-width: 100px;" />
        </HBox>
    </VBox>

</AnchorPane>