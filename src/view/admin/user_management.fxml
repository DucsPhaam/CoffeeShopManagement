<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.collections.FXCollections?>

<?import java.lang.String?>
<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.manager.EmployeeController"
            style="-fx-background-color: #f8f9fa;">

    <VBox spacing="20.0" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0"
          AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>

        <!-- Header -->
        <HBox alignment="CENTER_LEFT" spacing="20.0">
            <Label text="👥 Employee Management" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;">
                <font>
                    <Font size="28.0" />
                </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnRefresh" onAction="#handleRefresh" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 8; -fx-pref-height: 40px; -fx-pref-width: 120px;" text="🔄 Refresh" />
        </HBox>

        <!-- Search and Filter Bar -->
        <HBox spacing="15.0" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-padding: 15.0; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);">
            <TextField fx:id="txtSearch" promptText="🔍 Search employees..." style="-fx-pref-width: 300px; -fx-font-size: 14px;" onKeyReleased="#handleSearch" />
            <Label text="Filter by Role:" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;" />
            <ComboBox fx:id="cmbFilterRole" onAction="#handleFilter" style="-fx-pref-width: 150px; -fx-font-size: 14px;">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="All"/>
                        <String fx:value="Manager"/>
                        <String fx:value="Staff"/>
                    </FXCollections>
                </items>
            </ComboBox>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnAddEmployee" text="➕ Add Employee" onAction="#handleAddEmployee"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 8; -fx-pref-height: 40px; -fx-pref-width: 150px;" />
        </HBox>

        <!-- Employee Table -->
        <VBox VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-padding: 20.0; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 15, 0, 0, 5);">
            <TableView fx:id="tableEmployees" VBox.vgrow="ALWAYS" style="-fx-font-size: 13px; -fx-background-radius: 8;">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50.0" style="-fx-alignment: CENTER;" />
                    <TableColumn fx:id="colUsername" text="Username" prefWidth="200.0" />
                    <TableColumn fx:id="colRole" text="Role" prefWidth="100.0" style="-fx-alignment: CENTER;" />
                    <TableColumn fx:id="colStatus" text="Status" prefWidth="100.0" style="-fx-alignment: CENTER;" />
                    <TableColumn fx:id="colShiftStatus" text="Shift Status" prefWidth="150.0" style="-fx-alignment: CENTER;" />
                    <TableColumn fx:id="colActions" text="Actions" prefWidth="200.0" style="-fx-alignment: CENTER;" />
                </columns>
            </TableView>
            <HBox spacing="20.0" alignment="CENTER_LEFT" style="-fx-padding: 15.0 0 0 0;">
                <Label fx:id="lblTotalEmployees" text="Total: 0 employees" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            </HBox>
        </VBox>

    </VBox>

    <!-- Overlay for Dialogs -->
    <Pane fx:id="overlay" visible="false" managed="false"
          style="-fx-background-color: rgba(0,0,0,0.5);"
          AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0"/>

    <!-- Add/Edit Employee Dialog -->
    <VBox fx:id="dialogPane" visible="false" managed="false" spacing="15.0"
          style="-fx-background-color: white; -fx-padding: 25.0; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 20, 0, 0, 10);"
          AnchorPane.topAnchor="80.0" AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="200.0">

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label fx:id="dialogTitle" text="Add New Employee" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;">
                <font>
                    <Font size="20.0" />
                </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button text="✕" onAction="#handleCloseDialog"
                    style="-fx-background-color: transparent; -fx-font-size: 20px; -fx-cursor: hand; -fx-text-fill: #7f8c8d;" />
        </HBox>

        <Separator style="-fx-background-color: #e0e0e0;" />

        <GridPane hgap="15.0" vgap="15.0">
            <columnConstraints>
                <ColumnConstraints minWidth="120.0" />
                <ColumnConstraints minWidth="300.0" hgrow="ALWAYS" />
            </columnConstraints>

            <Label text="Username:" GridPane.rowIndex="0" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            <TextField fx:id="txtUsername" promptText="Enter username" GridPane.columnIndex="1" GridPane.rowIndex="0"
                       style="-fx-font-size: 14px; -fx-background-radius: 8;" />

            <Label text="Role:" GridPane.rowIndex="1" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            <ComboBox fx:id="cmbRole" promptText="Select role" GridPane.columnIndex="1" GridPane.rowIndex="1"
                      style="-fx-font-size: 14px; -fx-background-radius: 8;">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Manager"/>
                        <String fx:value="Staff"/>
                    </FXCollections>
                </items>
            </ComboBox>

            <Label text="Password:" GridPane.rowIndex="2" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            <PasswordField fx:id="txtPassword" promptText="Enter password" GridPane.columnIndex="1" GridPane.rowIndex="2"
                           style="-fx-font-size: 14px; -fx-background-radius: 8;" />
        </GridPane>

        <Separator style="-fx-background-color: #e0e0e0;" />

        <!-- Shift Management Section -->
        <Label text="Shift Management" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-font-size: 16px;" />
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <Button fx:id="btnStartShift" text="Start Shift" onAction="#handleStartShift"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 8; -fx-pref-height: 40px; -fx-pref-width: 100px;" />
            <Button fx:id="btnEndShift" text="End Shift" onAction="#handleEndShift"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 8; -fx-pref-height: 40px; -fx-pref-width: 100px;" />
            <ComboBox fx:id="cmbShiftStatus" promptText="Select Status" style="-fx-pref-width: 150px; -fx-font-size: 14px; -fx-background-radius: 8;">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="working"/>
                        <String fx:value="off-duty"/>
                        <String fx:value="on-break"/>
                    </FXCollections>
                </items>
            </ComboBox>
            <Button fx:id="btnUpdateShift" text="Update Status" onAction="#handleUpdateShift"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 8; -fx-pref-height: 40px; -fx-pref-width: 120px;" />
        </HBox>

        <Separator style="-fx-background-color: #e0e0e0;" />

        <HBox spacing="15.0" alignment="CENTER_RIGHT">
            <Button text="Cancel" onAction="#handleCloseDialog"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 8; -fx-pref-height: 40px; -fx-pref-width: 100px;" />
            <Button fx:id="btnSave" text="Save" onAction="#handleSaveEmployee"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 8; -fx-pref-height: 40px; -fx-pref-width: 100px;" />
        </HBox>
    </VBox>

</AnchorPane>