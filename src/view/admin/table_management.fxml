<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.collections.FXCollections?>

<?import java.lang.String?>
<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.manager.TableController"
            style="-fx-background-color: #f8f9fa;">

    <VBox spacing="20.0" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0"
          AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>

        <!-- Header -->
        <HBox alignment="CENTER_LEFT" spacing="20.0">
            <Label text="🪑 Table Management" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;">
                <font>
                    <Font size="28.0" />
                </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnRefresh" onAction="#handleRefresh" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 8; -fx-pref-height: 40px; -fx-pref-width: 120px;" text="🔄 Refresh" />
        </HBox>

        <!-- Search and Filter Bar -->
        <HBox spacing="15.0" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-padding: 15.0; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);">
            <TextField fx:id="txtSearch" promptText="🔍 Search tables..." style="-fx-pref-width: 300px; -fx-font-size: 14px;" onKeyReleased="#handleSearch" />
            <Label text="Filter by Status:" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;" />
            <ComboBox fx:id="cmbFilterStatus" onAction="#handleFilter" style="-fx-pref-width: 150px; -fx-font-size: 14px;">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="All"/>
                        <String fx:value="Available"/>
                        <String fx:value="Occupied"/>
                        <String fx:value="Reserved"/>
                        <String fx:value="Cleaning"/>
                    </FXCollections>
                </items>
            </ComboBox>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnAddTable" text="➕ Add Table" onAction="#handleAddTable"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 8; -fx-pref-height: 40px; -fx-pref-width: 150px;" />
        </HBox>

        <!-- TabPane for Floors -->
        <TabPane fx:id="floorTabPane" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 15, 0, 0, 5);">
            <Tab text="Floor 1" style="-fx-font-size: 14px;">
                <Pane fx:id="floor1Pane" style="-fx-background-color: #f8f9fa;" />
            </Tab>
            <Tab text="Floor 2" style="-fx-font-size: 14px;">
                <Pane fx:id="floor2Pane" style="-fx-background-color: #f8f9fa;" />
            </Tab>
            <Tab text="Floor 3" style="-fx-font-size: 14px;">
                <Pane fx:id="floor3Pane" style="-fx-background-color: #f8f9fa;" />
            </Tab>
        </TabPane>

        <!-- Statistics -->
        <HBox spacing="20.0" alignment="CENTER_LEFT" style="-fx-padding: 15.0 0 0 0;">
            <Label fx:id="lblTotalTables" text="Total: 0 tables" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
        </HBox>

    </VBox>

    <!-- Overlay for Dialogs -->
    <Pane fx:id="overlay" visible="false" managed="false"
          style="-fx-background-color: rgba(0,0,0,0.5);"
          AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0"/>

    <!-- Add/Edit Table Dialog -->
    <VBox fx:id="dialogPane" visible="false" managed="false" spacing="15.0"
          style="-fx-background-color: white; -fx-padding: 25.0; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 20, 0, 0, 10);"
          AnchorPane.topAnchor="80.0" AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="200.0">

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label fx:id="dialogTitle" text="Add New Table" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;">
                <font>
                    <Font size="20.0" />
                </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button text="✕" onAction="#handleCloseDialog"
                    style="-fx-background-color: transparent; -fx-font-size: 20px; -fx-cursor: hand; -fx-text-fill: #7f8c8d;" />
        </HBox>

        <Separator style="-fx-background-color: #e0e0e0;" />

        <GridPane hgap="15.0" vgap="15.0">
            <columnConstraints>
                <ColumnConstraints minWidth="120.0" />
                <ColumnConstraints minWidth="300.0" hgrow="ALWAYS" />
            </columnConstraints>

            <Label text="Name:" GridPane.rowIndex="0" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            <TextField fx:id="txtName" promptText="Enter table name" GridPane.columnIndex="1" GridPane.rowIndex="0"
                       style="-fx-font-size: 14px; -fx-background-radius: 8;" />

            <Label text="Floor:" GridPane.rowIndex="1" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            <ComboBox fx:id="cmbFloor" promptText="Select floor" GridPane.columnIndex="1" GridPane.rowIndex="1"
                      style="-fx-font-size: 14px; -fx-background-radius: 8;">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="1"/>
                        <String fx:value="2"/>
                        <String fx:value="3"/>
                    </FXCollections>
                </items>
            </ComboBox>

            <Label text="Seats:" GridPane.rowIndex="2" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            <TextField fx:id="txtSeats" promptText="Number of seats" GridPane.columnIndex="1" GridPane.rowIndex="2"
                       style="-fx-font-size: 14px; -fx-background-radius: 8;" />

            <Label text="Status:" GridPane.rowIndex="3" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            <ComboBox fx:id="cmbStatus" promptText="Select status" GridPane.columnIndex="1" GridPane.rowIndex="3"
                      style="-fx-font-size: 14px; -fx-background-radius: 8;">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="available"/>
                        <String fx:value="occupied"/>
                        <String fx:value="reserved"/>
                        <String fx:value="cleaning"/>
                    </FXCollections>
                </items>
            </ComboBox>
        </GridPane>

        <Separator style="-fx-background-color: #e0e0e0;" />

        <HBox spacing="15.0" alignment="CENTER_RIGHT">
            <Button text="Cancel" onAction="#handleCloseDialog"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 8; -fx-pref-height: 40px; -fx-pref-width: 100px;" />
            <Button fx:id="btnSave" text="Save" onAction="#handleSaveTable"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 8; -fx-pref-height: 40px; -fx-pref-width: 100px;" />
        </HBox>
    </VBox>

</AnchorPane>