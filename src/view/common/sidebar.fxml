<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="SceneBorderPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
            prefHeight="690.0" prefWidth="1350.0" stylesheets="@/resources/Stylesheet/CleanModern.css"
            xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controller.common.SidebarController">
    <left>
        <VBox prefHeight="690.0" prefWidth="260.0" style="-fx-background-color: #ffffff; -fx-border-color: #e2e8f0; -fx-border-width: 0 1 0 0;" BorderPane.alignment="CENTER">
            <children>
                <!-- Logo Section -->
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="260.0" style="-fx-background-color: #f8fafc;">
                    <VBox.margin>
                        <Insets top="0" />
                    </VBox.margin>
                    <children>
                        <VBox alignment="CENTER" spacing="4">
                            <children>
                                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@/resources/img/icon.png" />
                                    </image>
                                </ImageView>
                                <Label fx:id="currentAdminLabel" alignment="CENTER" text="Admin" style="-fx-text-fill: #1e293b; -fx-font-weight: 700;">
                                    <font>
                                        <Font name="Segoe UI Bold" size="16.0" />
                                    </font>
                                </Label>
                                <Label text="Coffee Shop Management" style="-fx-text-fill: #64748b; -fx-font-weight: 500;">
                                    <font>
                                        <Font name="Segoe UI" size="11.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </HBox>
                
                <!-- Menu Items -->
                <VBox spacing="4" VBox.vgrow="ALWAYS" style="-fx-padding: 12 12 12 12;">
                    <children>
                        <!-- Overview -->
                        <HBox fx:id="overviewBox" alignment="CENTER_LEFT" prefHeight="44.0" styleClass="sidebar-menu-item">
                            <children>
                                <Button fx:id="overviewBtn" alignment="CENTER_LEFT" graphicTextGap="12" mnemonicParsing="false" 
                                        onAction="#HandleOverviewClicked" prefHeight="44.0" prefWidth="236.0" 
                                        style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-cursor: hand;" 
                                        text="Overview" HBox.hgrow="ALWAYS">
                                    <graphic>
                                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@/resources/img/overview.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                    <font>
                                        <Font name="Segoe UI Semibold" size="14.0" />
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                        
                        <!-- Order -->
                        <HBox fx:id="orderBox" alignment="CENTER_LEFT" prefHeight="44.0" styleClass="sidebar-menu-item">
                            <children>
                                <Button fx:id="orderBtn" alignment="CENTER_LEFT" graphicTextGap="12" mnemonicParsing="false" 
                                        onAction="#HandleOrderClicked" prefHeight="44.0" prefWidth="200.0" 
                                        style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-cursor: hand;" 
                                        text="Order">
                                    <graphic>
                                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@/resources/img/order.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                    <font>
                                        <Font name="Segoe UI Semibold" size="14.0" />
                                    </font>
                                </Button>
                                <ImageView fx:id="orderAlert" fitHeight="12.0" fitWidth="12.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@/resources/img/redDot.png" />
                                    </image>
                                </ImageView>
                            </children>
                        </HBox>
                        
                        <!-- Product -->
                        <HBox fx:id="productBox" alignment="CENTER_LEFT" prefHeight="44.0" styleClass="sidebar-menu-item">
                            <children>
                                <Button fx:id="productBtn" alignment="CENTER_LEFT" graphicTextGap="12" mnemonicParsing="false" 
                                        onAction="#HandleProductClicked" prefHeight="44.0" prefWidth="236.0" 
                                        style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-cursor: hand;" 
                                        text="Product">
                                    <graphic>
                                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@/resources/img/product.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                    <font>
                                        <Font name="Segoe UI Semibold" size="14.0" />
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                        
                        <!-- Table -->
                        <HBox fx:id="tableBox" alignment="CENTER_LEFT" prefHeight="44.0" styleClass="sidebar-menu-item">
                            <children>
                                <Button fx:id="tableBtn" alignment="CENTER_LEFT" graphicTextGap="12" mnemonicParsing="false" 
                                        onAction="#HandleTableClicked" prefHeight="44.0" prefWidth="236.0" 
                                        style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-cursor: hand;" 
                                        text="Table">
                                    <graphic>
                                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@/resources/img/table.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                    <font>
                                        <Font name="Segoe UI Semibold" size="14.0" />
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                        
                        <!-- Inventory -->
                        <HBox fx:id="inventoryBox" alignment="CENTER_LEFT" prefHeight="44.0" styleClass="sidebar-menu-item">
                            <children>
                                <Button fx:id="inventoryBtn" alignment="CENTER_LEFT" graphicTextGap="12" mnemonicParsing="false" 
                                        onAction="#HandleInventoryClicked" prefHeight="44.0" prefWidth="236.0" 
                                        style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-cursor: hand;" 
                                        text="Inventory">
                                    <graphic>
                                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@/resources/img/inventory.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                    <font>
                                        <Font name="Segoe UI Semibold" size="14.0" />
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                        
                        <!-- Cashbook -->
                        <HBox fx:id="cashbookBox" alignment="CENTER_LEFT" prefHeight="44.0" styleClass="sidebar-menu-item">
                            <children>
                                <Button fx:id="cashbookBtn" alignment="CENTER_LEFT" graphicTextGap="12" mnemonicParsing="false" 
                                        onAction="#HandleCashbookClicked" prefHeight="44.0" prefWidth="236.0" 
                                        style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-cursor: hand;" 
                                        text="Cashbook">
                                    <graphic>
                                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@/resources/img/cashbook.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                    <font>
                                        <Font name="Segoe UI Semibold" size="14.0" />
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                        
                        <!-- Employee -->
                        <HBox fx:id="employeeBox" alignment="CENTER_LEFT" prefHeight="44.0" styleClass="sidebar-menu-item">
                            <children>
                                <Button fx:id="employeeBtn" alignment="CENTER_LEFT" graphicTextGap="12" mnemonicParsing="false" 
                                        onAction="#HandleEmployeeClicked" prefHeight="44.0" prefWidth="236.0" 
                                        style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-cursor: hand;" 
                                        text="Employee">
                                    <graphic>
                                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@/resources/img/employee.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                    <font>
                                        <Font name="Segoe UI Semibold" size="14.0" />
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                        
                        <!-- Report -->
                        <HBox fx:id="reportBox" alignment="CENTER_LEFT" prefHeight="44.0" styleClass="sidebar-menu-item">
                            <children>
                                <Button fx:id="reportBtn" alignment="CENTER_LEFT" graphicTextGap="12" mnemonicParsing="false" 
                                        onAction="#HandleReportClicked" prefHeight="44.0" prefWidth="236.0" 
                                        style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-cursor: hand;" 
                                        text="Report">
                                    <graphic>
                                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@/resources/img/report.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                    <font>
                                        <Font name="Segoe UI Semibold" size="14.0" />
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                        
                        <!-- Change Password -->
                        <HBox fx:id="passwordBox" alignment="CENTER_LEFT" prefHeight="44.0" styleClass="sidebar-menu-item">
                            <children>
                                <Button fx:id="passwordBtn" alignment="CENTER_LEFT" graphicTextGap="12" mnemonicParsing="false" 
                                        onAction="#HandlePasswordClicked" prefHeight="44.0" prefWidth="236.0" 
                                        style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-cursor: hand;" 
                                        text="Change Password">
                                    <graphic>
                                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@/resources/img/password.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                    <font>
                                        <Font name="Segoe UI Semibold" size="14.0" />
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </VBox>
                
                <!-- Sign Out Button -->
                <HBox alignment="CENTER" prefHeight="70.0" style="-fx-padding: 12; -fx-border-color: #e2e8f0; -fx-border-width: 1 0 0 0;">
                    <children>
                        <Button fx:id="logoutBtn" alignment="CENTER" graphicTextGap="12" mnemonicParsing="false" 
                                onAction="#HandleLogOutClicked" prefHeight="44.0" prefWidth="236.0" styleClass="button-danger"
                                style="-fx-background-radius: 8;" 
                                text="Sign Out">
                            <graphic>
                                <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@/resources/img/signout.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                            <font>
                                <Font name="Segoe UI Bold" size="14.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </left>
    <center>
        <AnchorPane prefHeight="690.0" prefWidth="1090.0" style="-fx-background-color: #f8fafc;" BorderPane.alignment="CENTER" />
    </center>
</BorderPane>